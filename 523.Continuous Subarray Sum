unordered_map<int, int> rem_map{{0, -1}};
        int sum = 0;
        for (int i = 0; i < nums.size(); ++i) {
            sum += nums[i];
            int rem = sum % k;
            if (rem_map.count(rem)) {
                if (i - rem_map[rem] > 1) return true;
            } else {
                rem_map[rem] = i;
            }
        }
        return false;
